{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "node",
            "cheerio"
        ],
        "allowJs": true,
        "checkJs": false,
        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "strict": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "outDir": "types/"
    },
    "include": [
        "src/index.esm.js"
    ],
    "exclude": [
        "src/index.js"
    ]
}
