{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2018",
            "DOM",
            "DOM.Iterable",
            "ES2018.AsyncIterable"
        ],
        "allowJs": true,
        "checkJs": true,
        "noEmit": false,
        "newLine": "lf",
        "declaration": true,
        "emitDeclarationOnly": false,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noStrictGenericChecks": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": false,
        "declarationDir": "types/",
        "outDir": "build/"
    },
    "include": [
        "./types-apify/**/*.d.ts",
        "./src/index.esm.js",
    ],
    "exclude": [
        "./src/index.js"
    ]
}
